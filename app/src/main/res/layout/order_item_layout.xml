<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:contentPadding="10dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderNumberTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Ticket details"
                android:gravity="center_vertical|left"
                android:textColor="#e2b84c"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"/>


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store location:"
                android:gravity="center_vertical|left"
                android:textColor="@color/color_black"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/storeAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ortigas "
                android:gravity="center_vertical|left"
                android:textColor="@color/color_gray"
                android:textSize="15dp"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Name:"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_black"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/customerNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JEPOY DIZON "
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_gray"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Address:"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_black"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/customerAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ORTIGAS"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_gray"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Amount:"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_black"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/orderAmountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="P1000"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_gray"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery time:"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_black"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/orderDeliveryTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:00pm"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_gray"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Option:"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_black"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/orderPaymentOptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_gray"
                    android:textSize="15dp"/>

            </LinearLayout>

            <Button
                android:enabled="false"
                android:id="@+id/riderOutButton"
                android:onClick="onClickSubmit"
                android:text="RIDER OUT"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>