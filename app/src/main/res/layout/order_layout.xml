<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/header_gradient"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/backButtonImageView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TICKET# "
            android:gravity="center_vertical|right"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/orderNumberTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TICKET #"
            android:gravity="center_vertical|left"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--tools:src="@mipmap/ic_launcher_round" />-->

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:cardElevation="20dp"
            app:contentPadding="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="Ticket details"
                    android:gravity="center_vertical|left"
                    android:textColor="#e2b84c"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Store location:"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_black"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/storeAddressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ortigas "
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_gray"
                        android:textSize="15dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Name:"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_black"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/customerNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="JEPOY DIZON "
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_gray"
                        android:textSize="15dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Address:"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_black"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/customerAddressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ORTIGAS"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_gray"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Amount:"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_black"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/orderAmountTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P1000"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_gray"
                        android:textSize="15dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery time:"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_black"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/orderDeliveryTimeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:00pm"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_gray"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Option:"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_black"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/orderPaymentOptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Credit Card"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/color_gray"
                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderDetailsRecyclerView"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="25dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/storeInButton"
            android:onClick="onClickSubmit"
            android:text="STORE IN"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/riderOutButton"
            android:onClick="onClickSubmit"
            android:text="RIDER OUT"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:enabled="false"
            android:layout_height="50dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gradient"

        android:layout_gravity="center_horizontal">
        <!--<Spinner-->
            <!--android:id="@+id/statusSpinner"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:spinnerMode="dropdown"-->
            <!--style="@style/Widget.AppCompat.Spinner.DropDown">-->

        <!--</Spinner>-->



</RelativeLayout>

</LinearLayout>